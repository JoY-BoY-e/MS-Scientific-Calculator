<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0FBF5F5"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="8dp">


    <!-- Display Screen -->

    <!-- Row 1 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/menu_btn1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/hamburger_menu_svgrepo_com"


            />

        <TextView
            android:id="@+id/menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/menu_btn1"
            android:text="@string/calculator_type"
            android:textSize="25sp"

            />

        <Button
            android:id="@+id/menu_btn2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/menu_text"
            android:background="@drawable/minimize_square_3_svgrepo_com"
            />



        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/history_svgrepo_com"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/expressiontxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="end"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/cardview_dark_background"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:background="@drawable/text_box"
        android:gravity="end"
        android:padding="25dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="44sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="5dp">


        <Button
            android:id="@+id/btn01"
            style="@style/CalcButton"
            android:background="@drawable/top_m_button_selector"
            android:text="MC"
            android:textColor="@android:color/darker_gray"

            android:textSize="12sp" />

        <Button
            android:id="@+id/btn02"
            style="@style/CalcButton"
            android:background="@drawable/top_m_button_selector"
            android:text="MR"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn03"
            style="@style/CalcButton"
            android:background="@drawable/top_m_button_selector"
            android:text="M+"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn04"
            style="@style/CalcButton"
            android:background="@drawable/top_m_button_selector"
            android:text="M-"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn05"
            style="@style/CalcButton"
            android:background="@drawable/top_m_button_selector"
            android:text="MS"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn06"
            style="@style/CalcButton"
            android:background="@drawable/top_m_button_selector"
            android:text="M^"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mod"
            style="@style/CalcButton"
            android:backgroundTint="#F6F5F5"
            android:textSize="17dp"
            android:text="%" />

        <Button
            android:id="@+id/btn_CE"
            style="@style/CalcButton"
            android:backgroundTint="#F6F5F5"
            android:textSize="15dp"
            android:text="CE" />

        <Button
            android:id="@+id/btn_C"
            style="@style/CalcButton"
            android:backgroundTint="#F6F5F5"
            android:textSize="15dp"
            android:text="C" />

        <Button
            android:id="@+id/btn_clr"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:text="⌫" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fract"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:textSize="15dp"
            android:text="1/x" />

        <Button
            android:id="@+id/btn_sq"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:textSize="15dp"
            android:text="x²" />

        <Button
            android:id="@+id/btn_sqrt"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:textSize="17dp"
            android:text="√" />

        <Button
            android:id="@+id/btn_div"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:text="÷" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            style="@style/CalcButton"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/CalcButton"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/CalcButton"
            android:text="9" />

        <Button
            android:id="@+id/btn_mul"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:text="×" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/CalcButton"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/CalcButton"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/CalcButton"
            android:text="6" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:textSize="20dp"
            android:text="-" />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/CalcButton"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/CalcButton"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/CalcButton"
            android:text="3" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/CalcButton"
            android:backgroundTint="#F6F6F6"
            android:textSize="20dp"
            android:text="+" />
    </LinearLayout>

    <!-- Row 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pls_min"
            style="@style/CalcButton"
            android:textSize="16dp"

            android:text="+/-" />

        <Button
            android:id="@+id/btn_0"
            style="@style/CalcButton"
            android:layout_weight="1"

            android:text="0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/CalcButton"
            android:textSize="27dp"
            android:text="." />

        <Button
            android:id="@+id/btn_equal"
            style="@style/CalcButton"
            android:backgroundTint="#555"
            android:text="="
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
